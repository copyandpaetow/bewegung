---
export interface Props {
	pages: string[];
}

const { pages } = Astro.props;
---

<nav>
	<ul class="list">
		<li>
			<a href=`${import.meta.env.BASE_URL}`>home</a>
		</li>
		{
			pages.map((entry) => (
				<li>
					<a href={entry}>{entry}</a>
				</li>
			))
		}
	</ul>
</nav>

<style>
	nav {
		display: grid;
		grid-template-columns: 1fr max-content;
		padding: 2vh 5vw;
	}

	ul {
		grid-column: 2/3;
	}
</style>
